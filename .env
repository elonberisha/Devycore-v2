# Database
DB_HOST=localhost
DB_NAME=devycore_v2
DB_USER=root
DB_PASS=
DB_PORT=3306

# Application
APP_ENV=development
APP_URL=http://localhost/devycore-v2
APP_DEBUG=true
SECRET_KEY=dev_secret_key_change_in_production_12345678901234567890

# Admin
ADMIN_RESET_CODE=reset123

# Email (SMTP) - Configure these for email functionality
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=info@devycore.com
SMTP_PASS=Loniloni.123
SMTP_FROM_EMAIL=info@devycore.com
SMTP_FROM_NAME=Devycore

# Email Recipients
CONTACT_TO=info@devycore.com
DISCOUNT_TO=info@devycore.com
ADMIN_NOTIFY_EMAIL=admin@devycore.com

# Rate Limiting
RATE_LIMIT_CONTACT=10
RATE_LIMIT_DISCOUNT=5
RATE_LIMIT_LOGIN=10
RATE_LIMIT_WINDOW=600

# File Upload
MAX_UPLOAD_SIZE=5242880
UPLOAD_DIR=public/admin/uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Session
SESSION_LIFETIME=86400
TOKEN_EXPIRY_HOURS=24

# Performance
ENABLE_CACHE=true
CACHE_TTL=300

# Security
CSRF_TOKEN_EXPIRY=3600
ENABLE_HTTPS=false
