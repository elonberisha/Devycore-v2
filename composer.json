{
    "name": "devycore/portfolio-v2",
    "description": "High-performance portfolio website with brutalist design",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "phpmailer/phpmailer": "^6.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Devycore\\": "src/classes/"
        },
        "files": [
            "src/utils/helpers.php",
            "src/utils/validation.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
